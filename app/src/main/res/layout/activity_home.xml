<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:transcriptMode="alwaysScroll"
    tools:context="org.downtowncoc.activities.HomeActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/android_icon_144x144" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2" >

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_gravity="left|top"
            android:layout_row="0"/>

        <ImageButton
            android:id="@+id/btn_Bible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bible_icon"
            android:layout_gravity="left|top"
            android:layout_row="0"/>

        <RelativeLayout
            android:id="@+id/rlCalDesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_design"
            android:layout_gravity="left|top"
            android:layout_row="0" >
            <TextView
                android:id="@+id/tvDayOfMonth"
                android:text="02"
                android:textSize="20dp"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tvDayOfWeek"
                android:textSize="15dp"
                android:text="Day"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/tvDayOfMonth"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rAudioSermon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_design"
            android:layout_gravity="left|top"
            android:layout_row="0" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listen\nto\nSermons"/>
        </RelativeLayout>

    </GridLayout>
    <Button
        android:id="@+id/btnBroadcast"
        android:text="Broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
